<%- include('../partials/header', { pageTitle: 'Create Quotation', activePage: 'new' }) %>

    <div class="invoice-container">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title">
                <span>üìù</span>
                Create New Quotation
            </h1>
        </div>

        <!-- Form Card -->
        <div class="card">
            <div class="card-body">
                <form id="quotationForm" action="/quotations" method="POST">
                    <!-- Document Info -->
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">Volume No.</label>
                            <input type="text" name="volume_no" class="form-control" placeholder="Enter volume number">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Document No. <span class="required">*</span></label>
                            <input type="text" name="document_no" class="form-control" required placeholder="Enter document number">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Date <span class="required">*</span></label>
                            <input type="date" name="date" class="form-control" required>
                        </div>
                    </div>

                    <!-- Seller Section -->
                    <div class="form-section">
                        <h3 class="form-section-title">
                            <span>üè¢</span> Seller Information
                        </h3>
                        <div class="form-group">
                            <label class="form-label">Seller Name <span class="required">*</span></label>
                            <input type="text" name="seller_name" class="form-control" required placeholder="Enter seller/company name">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Seller Address</label>
                            <textarea name="seller_address" class="form-control" rows="2" placeholder="Enter seller address"></textarea>
                        </div>
                    </div>

                    <!-- Customer Section -->
                    <div class="form-section">
                        <h3 class="form-section-title">
                            <span>üë§</span> Customer Information
                        </h3>
                        <div class="form-group">
                            <label class="form-label">Customer Name <span class="required">*</span></label>
                            <input type="text" name="customer_name" class="form-control" required placeholder="Enter customer name">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Customer Address</label>
                            <textarea name="customer_address" class="form-control" rows="2" placeholder="Enter customer address"></textarea>
                        </div>
                    </div>

                    <!-- Items Section -->
                    <div class="form-section">
                        <h3 class="form-section-title">
                            <span>üì¶</span> Items
                        </h3>
                        <div class="items-table-wrapper">
                            <table class="items-table" id="itemsTable">
                                <thead>
                                    <tr>
                                        <th style="width: 50px">No.</th>
                                        <th>Description</th>
                                        <th style="width: 80px">Qty</th>
                                        <th style="width: 80px">Unit</th>
                                        <th style="width: 110px">Price/Unit</th>
                                        <th style="width: 110px">Total</th>
                                        <th style="width: 50px"></th>
                                    </tr>
                                </thead>
                                <tbody id="itemsBody">
                                </tbody>
                            </table>
                        </div>
                        <button type="button" class="btn btn-success mt-3" onclick="addItem()">‚ûï Add Item</button>

                        <div class="grand-total-display">
                            <div class="label">Grand Total</div>
                            <div class="amount"><span id="grandTotal">0.00</span> ‡∏ø</div>
                        </div>
                    </div>

                    <!-- Amount in Words -->
                    <div class="form-group mt-4">
                        <label class="form-label">Amount in Words</label>
                        <input type="text" name="amount_in_words" class="form-control" placeholder="Enter amount in words (e.g., One Thousand Baht)">
                    </div>

                    <input type="hidden" name="items" id="itemsInput">

                    <!-- Form Actions -->
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary btn-lg">üíæ Save Quotation</button>
                        <a href="/quotations" class="btn btn-secondary btn-lg">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        let itemCount = 0;
        const items = [];

        function addItem() {
            itemCount++;
            const tbody = document.getElementById('itemsBody');
            const row = document.createElement('tr');
            row.className = 'item-row';
            row.id = `item-${itemCount}`;
            row.innerHTML = `
                <td><input type="text" value="${itemCount}" readonly></td>
                <td><input type="text" class="desc" placeholder="Description" required></td>
                <td><input type="number" class="qty" value="1" min="0" step="any" onchange="calculateRow(${itemCount})"></td>
                <td><input type="text" class="unit" value="pcs" placeholder="Unit"></td>
                <td><input type="number" class="price" value="0" min="0" step="any" onchange="calculateRow(${itemCount})"></td>
                <td><input type="text" class="total" value="0.00" readonly></td>
                <td><button type="button" class="btn-remove" onclick="removeItem(${itemCount})">√ó</button></td>
            `;
            tbody.appendChild(row);
            updateItems();
        }

        function removeItem(id) {
            const row = document.getElementById(`item-${id}`);
            if (row) {
                row.remove();
                updateItems();
            }
        }

        function calculateRow(id) {
            const row = document.getElementById(`item-${id}`);
            if (row) {
                const qty = parseFloat(row.querySelector('.qty').value) || 0;
                const price = parseFloat(row.querySelector('.price').value) || 0;
                const total = qty * price;
                row.querySelector('.total').value = total.toFixed(2);
                updateItems();
            }
        }

        function updateItems() {
            const rows = document.querySelectorAll('.item-row');
            const itemsArray = [];
            let grandTotal = 0;
            let itemNumber = 1;

            rows.forEach(row => {
                const desc = row.querySelector('.desc').value;
                const qty = parseFloat(row.querySelector('.qty').value) || 0;
                const unit = row.querySelector('.unit').value;
                const price = parseFloat(row.querySelector('.price').value) || 0;
                const total = qty * price;

                itemsArray.push({
                    item_number: itemNumber++,
                    description: desc,
                    quantity: qty,
                    unit: unit,
                    price_per_unit: price,
                    total: total
                });

                grandTotal += total;
            });

            document.getElementById('itemsInput').value = JSON.stringify(itemsArray);
            document.getElementById('grandTotal').textContent = grandTotal.toFixed(2);
        }

        document.getElementById('quotationForm').addEventListener('submit', function() {
            updateItems();
        });

        addItem();

        document.querySelector('input[name="date"]').valueAsDate = new Date();
    </script>


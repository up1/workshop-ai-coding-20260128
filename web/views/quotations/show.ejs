<%- include('../partials/header', { pageTitle: 'Quotation - ' + quotation.document_no, activePage: 'view' }) %>

    <div class="invoice-container">
        <!-- Invoice Card -->
        <div class="invoice-card">
            <!-- Invoice Header -->
            <div class="invoice-header">
                <div class="invoice-header-content">
                    <div class="invoice-brand">
                        <h1>üìã Koice</h1>
                        <p>Invoice / Delivery Note</p>
                    </div>
                    <div class="invoice-badge">
                        QUOTATION
                    </div>
                </div>
            </div>

            <!-- Invoice Body -->
            <div class="invoice-body">
                <!-- Invoice Info Grid -->
                <div class="invoice-info-grid">
                    <div class="invoice-info-item">
                        <div class="label">Volume No.</div>
                        <div class="value"><%= quotation.volume_no || '-' %></div>
                    </div>
                    <div class="invoice-info-item">
                        <div class="label">Document No.</div>
                        <div class="value"><%= quotation.document_no %></div>
                    </div>
                    <div class="invoice-info-item">
                        <div class="label">Date</div>
                        <div class="value"><%= quotation.date %></div>
                    </div>
                </div>

                <!-- Parties Section -->
                <div class="invoice-parties">
                    <div class="party-box">
                        <h4>From (Seller)</h4>
                        <div class="name"><%= quotation.seller_name %></div>
                        <div class="address"><%= quotation.seller_address || '-' %></div>
                    </div>
                    <div class="party-box customer">
                        <h4>Bill To (Customer)</h4>
                        <div class="name"><%= quotation.customer_name %></div>
                        <div class="address"><%= quotation.customer_address || '-' %></div>
                    </div>
                </div>

                <!-- Items Table -->
                <div class="invoice-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width: 60px">No.</th>
                                <th>Description</th>
                                <th style="width: 80px">Qty</th>
                                <th style="width: 80px">Unit</th>
                                <th style="width: 120px">Price/Unit</th>
                                <th style="width: 120px">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% items.forEach(item => { %>
                                <tr>
                                    <td><%= item.item_number %></td>
                                    <td><%= item.description %></td>
                                    <td class="text-right"><%= item.quantity %></td>
                                    <td><%= item.unit %></td>
                                    <td class="text-right"><%= item.price_per_unit.toFixed(2) %></td>
                                    <td class="text-right"><%= item.total.toFixed(2) %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                        <tfoot>
                            <tr class="grand-total">
                                <td colspan="5" class="text-right">Grand Total</td>
                                <td class="text-right"><%= quotation.total_amount.toFixed(2) %> ‡∏ø</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <% if (quotation.amount_in_words) { %>
                    <div class="amount-words-box">
                        <strong>Amount in Words:</strong> <%= quotation.amount_in_words %>
                    </div>
                <% } %>
            </div>

            <!-- Invoice Footer -->
            <div class="invoice-footer">
                <div class="thank-you">Thank you for your business!</div>
                <div class="company-name">Koice - Quotation Management System</div>
            </div>

            <!-- Invoice Actions -->
            <div class="invoice-actions">
                <button onclick="window.print()" class="btn btn-outline-primary btn-lg">
                    üñ®Ô∏è Print
                </button>
                <a href="/quotations/<%= quotation.id %>/pdf" class="btn btn-success btn-lg">
                    üì• Download PDF
                </a>
                <a href="/quotations" class="btn btn-secondary btn-lg">
                    ‚Üê Back to List
                </a>
            </div>
        </div>
    </div>

<%- include('../partials/footer') %>
